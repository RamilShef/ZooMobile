<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/light2_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="30dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="100dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/syslik"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="fill_horizontal|center_vertical"
                            android:justificationMode="inter_word"
                            android:layout_gravity="top|center_horizontal"
                            android:text="\u3000«Стоишь столбиком – значит, уже на 50% суслик»"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/light2_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="30dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="100dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/lenivec"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="fill_horizontal|center_vertical"
                            android:justificationMode="inter_word"
                            android:layout_gravity="top|center_horizontal"
                            android:text="\u3000«Двигайся медленнее – успеешь заметить всё, что пропускал»"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/light2_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="30dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="100dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bears"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="fill_horizontal|center_vertical"
                            android:justificationMode="inter_word"
                            android:layout_gravity="top|center_horizontal"
                            android:text="\u3000«Если не хочешь, чтобы тебя узнали – надень очки. Работает у медведей!»"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/light2_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="30dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="100dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bobr"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="fill_horizontal|center_vertical"
                            android:justificationMode="inter_word"
                            android:layout_gravity="top|center_horizontal"
                            android:text="\u3000«Разбудил соседа в 6 утра? Скажи, что работаешь, как бобёр (Они поймут)»"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/light2_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="30dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="100dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/popugai"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="fill_horizontal|center_vertical"
                            android:justificationMode="inter_word"
                            android:layout_gravity="top|center_horizontal"
                            android:text="\u3000«Хочешь выучить испанский? Садись рядом с попугаем и повторяй за ним (Результаты могут быть неожиданными)»"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/light2_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="30dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="100dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bic"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="fill_horizontal|center_vertical"
                            android:justificationMode="inter_word"
                            android:layout_gravity="top|center_horizontal"
                            android:text="\u3000«Зимой мёрзнешь? Оденься, как овцебык: шерсть + уверенность в себе»"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="160dp"/>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_marginBottom="-10dp"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/backkk"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/tool_bar"
            android:layout_marginBottom="50dp"
            android:gravity="center">

            <ImageView
                android:onClick="onMapClick"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home"
                android:layout_margin="13dp"
                android:layout_gravity="center"/>
            <Space
                android:layout_width="15dp"
                android:layout_height="0dp"/>
            <ImageView
                android:onClick="onSearchClick"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/lens"
                android:layout_margin="13dp"
                android:layout_gravity="center"/>
            <Space
                android:layout_width="15dp"
                android:layout_height="0dp"/>
            <ImageView
                android:onClick="onFeedbackClick"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/feedback"
                android:layout_margin="13dp"
                android:layout_gravity="center"/>
            <Space
                android:layout_width="15dp"
                android:layout_height="0dp"/>
            <ImageView
                android:onClick="onSettingsClick"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/setting"
                android:layout_margin="13dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>