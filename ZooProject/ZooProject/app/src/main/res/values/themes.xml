<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZooProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomSwitch" parent="Theme.AppCompat.Light">
        <!-- Цвет бегунка (thumb) -->
        <item name="colorControlActivated">@color/green</item> <!-- Цвет, когда включен -->
        <item name="colorSwitchThumbNormal">@color/gray</item> <!-- Цвет, когда выключен -->

        <!-- Цвет дорожки (track) -->
        <item name="trackTint">@color/light_gray</item> <!-- Цвет дорожки -->
        <item name="trackTintMode">multiply</item>
    </style>
</resources>